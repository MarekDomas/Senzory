<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Senzory.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>

        <VerticalStackLayout>

            <BoxView
                x:Name="box"
                Margin="20"
                BackgroundColor="Green"
                HeightRequest="100"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                WidthRequest="200" />

            <Label
                x:Name="lbl"
                Margin="20"
                Text="Stav baterie: " />
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
