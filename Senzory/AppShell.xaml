<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Senzory.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Senzory.Pages"
    Title="Senzory"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Stav baterie"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Informace o zařízení"
        ContentTemplate="{DataTemplate local:DeviceInfoPage}"
        Route="DeviceInfoPage" />
    <ShellContent
        Title="Sensory"
        ContentTemplate="{DataTemplate local:SensorPage}"
        Route="SensorPage" />

</Shell>